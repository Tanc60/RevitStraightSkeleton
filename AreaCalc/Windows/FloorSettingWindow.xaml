<Window x:Class="AreaCalc.Windows.FloorSettingWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AreaCalc.Windows"
             mc:Ignorable="d" Title="Floor Setting"
             Height="auto" Width="800" SizeToContent="Height">
    <Border Padding="20">
        <StackPanel>
            <DataGrid x:Name ="DataGrid1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"  />
            <StackPanel Margin="10 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="确定" Width="100" />
                    <Button Content="取消" Width="100" Grid.Column="2" />
                </Grid>
            </StackPanel>
        </StackPanel>
        
    </Border>
</Window>
